#!/bin/bash
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

cd "$PROJECT_ROOT"
export DISPLAY=:0

# Resolve checkpoint path: use as-is if it exists, otherwise prepend runs/
CKPT_PATH="$1"
if [ ! -d "$CKPT_PATH" ]; then
    CKPT_PATH="runs/$1"
fi

exec build/release/viewer/render_ckpt "$CKPT_PATH" "${@:2}"